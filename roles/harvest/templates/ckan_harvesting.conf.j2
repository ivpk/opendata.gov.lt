[program:ckan_gather_consumer]

command={{ ckan_path }}/bin/paster --plugin=ckanext-harvest harvester gather_consumer --config={{ ckan_config }}

; user that owns virtual environment.
user=www-data

numprocs=1
stdout_logfile={{ ckan_log_dir }}/gather_consumer.log
stderr_logfile={{ ckan_log_dir }}/gather_consumer.error.log
autostart=true
autorestart=true
startsecs=10

[program:ckan_fetch_consumer]

command={{ ckan_path }}/bin/paster --plugin=ckanext-harvest harvester fetch_consumer --config={{ ckan_config }}

; user that owns virtual environment.
user=www-data

numprocs=1
stdout_logfile={{ ckan_log_dir }}/fetch_consumer.log
stderr_logfile={{ ckan_log_dir }}/fetch_consumer.error.log
autostart=true
autorestart=true
startsecs=10
